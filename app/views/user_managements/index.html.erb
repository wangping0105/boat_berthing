<h2 class="sub-header">员工列表</h2>

<table class="table table-striped">
  <thead>
  <tr>
    <th>ID</th>
    <th>姓名</th>
    <th>所属部门</th>
    <th>创建时间</th>
    <th width="200">操作</th>
  </tr>
  </thead>
  <tbody>
  <% @users.each do |pr| %>
    <tr>
      <td><%= pr.id %></td>
      <td><%= pr.name %></td>
      <td><%= pr.department.try(:name) %></td>
      <td><%= pr.created_at.strftime("%F %T") %></td>
      <td>
      </td>
    </tr>
  <% end %>  </tbody>
</table>
<%= paginate @users %>